<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	
	<servlet>
		<servlet-name>Voorraad</servlet-name>
		<servlet-class>servlets.VoorraadOverzichtServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Voorraad</servlet-name>
		<url-pattern>/VoorraadOverzichtServlet.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>WijzigProduct</servlet-name>
		<servlet-class>servlets.WijzigProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WijzigProduct</servlet-name>
		<url-pattern>/WijzigProductServlet.do</url-pattern>
	</servlet-mapping>
	<servlet-name>NieuweKlus</servlet-name>
	<servlet-class>servlets.NieuweKlusServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NieuweKlus</servlet-name>
		<url-pattern>/NieuweKlusServlet.do</url-pattern>
	</servlet-mapping>
</web-app>